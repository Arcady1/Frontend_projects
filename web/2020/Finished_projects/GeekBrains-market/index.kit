<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interior</title>
    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300,700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="main-container">
        <div class="header">
            <div class="slider slider__pos">
                <!-- @import "blocks/template-blocks/menu/menu.kit" -->
                <div class="slider__text slider__text_margin-top">
                    <h2 class="slider__title">trending</h2>
                    <h3 class="slider__subtitle slider__subtitle_margin-top">fishnet chair</h3>
                    <p class="slider__paragraph slider__paragraph_margin-top">
                        Seat and back with upholstery made of&nbsp;cold cure foam. Steel frame, <br> available
                        in&nbsp;matt
                        powder-coated black
                        or&nbsp;highly polished chrome.
                    </p>
                    <a href="#" class="order-button slider__button_margin-top">
                        <p class="order-button__text">Order us</p>
                    </a>
                </div>
                <div class="three-pagination three-pagination_position">
                    <a href="#" class="three-pagination__circle"></a><a href="#"
                        class="three-pagination__circle three-pagination__active">
                    </a><a href="#" class="three-pagination__circle"></a>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="featured-new featured-new_margin-top">
                <div class="featured-new__title">
                    <ul class="header">
                        <ul class="header__pagination">
                            <li class="pagination-item pagination-item_active"><a href="#">Featured</a></li>
                            <li class="pagination-item"><a href="#">New</a></li>
                        </ul>
                        <div class="explore-all">
                            <a href="#" class="explore-all__paragraph">Explore all</a>
                        </div>
                </div>
                <div class="featured-new__slider">
                    <ul class="slider__products">
                        <li class="product-item">
                            <img class="product__img" src="img/featured-new/product_light.jpg" alt="product_light">
                            <div class="product-item_hover">
                                <a class="hover__button" href="#"><img src="img/featured-new/arrow-big.png"
                                        alt="arrow"></a>
                                <h3 class="hover__title hover__title_margin-top">Fishnet Chair</h3>
                                <p class="hover__subtitle hover__subtitle_margin-top">Seat and back with upholstery made
                                    of cold cure foam</p>
                            </div>
                        </li>
                        <li class="product-item">
                            <img class="product__img" src="img/featured-new/product_2chair.jpg" alt="product_2chair">
                            <div class="product-item_hover">
                                <a class="hover__button" href="#"><img src="img/featured-new/arrow-big.png"
                                        alt="arrow"></a>
                                <h3 class="hover__title hover__title_margin-top">Fishnet Chair</h3>
                                <p class="hover__subtitle hover__subtitle_margin-top">Seat and back with upholstery made
                                    of cold cure foam</p>
                            </div>
                        </li>
                        <li class="product-item">
                            <img class="product__img" src="img/featured-new/product_3kettle.jpg" alt="product_3kettle">
                            <div class="product-item_hover">
                                <a class="hover__button" href="#"><img src="img/featured-new/arrow-big.png"
                                        alt="arrow"></a>
                                <h3 class="hover__title hover__title_margin-top">Fishnet Chair</h3>
                                <p class="hover__subtitle hover__subtitle_margin-top">Seat and back with upholstery made
                                    of cold cure foam</p>
                            </div>
                        </li>
                        <li class="product-item">
                            <img class="product__img" src="img/featured-new/product_4red_chair.jpg"
                                alt="product_4red_chair">
                            <div class="product-item_hover">
                                <a class="hover__button" href="#"><img src="img/featured-new/arrow-big.png"
                                        alt="arrow"></a>
                                <h3 class="hover__title hover__title_margin-top">Fishnet Chair</h3>
                                <p class="hover__subtitle hover__subtitle_margin-top">Seat and back with upholstery made
                                    of cold cure foam</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- @import 'blocks/template-blocks/exclusieve-products/exclusive-products' -->
            <div class="trending-products products_margin-top">
                <div class="products__header">
                    <h2 class="products__title">Trending Products</h2>
                    <div class="explore-all">
                        <a href="#" class="explore-all__paragraph">Explore all</a>
                    </div>
                </div>
                <div class="products__list products__products_margin-top">
                    <a class="products__item products__item_padding" href="#"><img
                            src="img/trending-products/product_light_1.jpg" alt="light_1"></a>
                    <a class="products__item products__item_padding" href="#"><img
                            src="img/trending-products/product_chair_white.jpg" alt="chair_white"></a>
                    <a class="products__item products__item_padding" href="#"><img
                            src="img/trending-products/product_light_2.jpg" alt="light_2"></a>
                    <a class="products__item products__item_padding" href="#"><img
                            src="img/trending-products/product_light_3.jpg" alt="light_3"></a>
                    <a class="products__item products__item_padding" href="#"><img
                            src="img/trending-products/product_black.jpg" alt="black"></a>
                    <a class="products__item products__item_padding" href="#"><img
                            src="img/trending-products/product_light_4.jpg" alt="light_4"></a>
                </div>
            </div>
            <div class="hot-deals hot-deals_padding hot-deals_margin-top">
                <div class="exclusive-product exclusive-product_padding">
                    <h3 class="exclusive-product__title">Hot deal</h3>
                    <p class="exclusive-product__subtitle exclusive-product__subtitle_margin-top">Fishnet Chair</p>
                    <p class="exclusive-product__paragraph exclusive-product__paragraph_margin-top">Seat and back with
                        upholstery
                        made of cold cure foam. Steel frame, available in matt powder-coated black</p>
                    <a href="#" class="order-button exclusive-product__button_margin-top">
                        <p class="order-button__text">Order us</p>
                    </a>
                </div>
                <div class="three-pagination three-pagination_position">
                    <a href="#" class="three-pagination__circle"></a><a href="#"
                        class="three-pagination__circle three-pagination__active">
                    </a><a href="#" class="three-pagination__circle"></a>
                </div>
            </div>
            <div class="exclusive-collage exclusive-collage_margin">
                <div class="products products__left-big products__left-big_margin-right">
                    <div class="exclusive-product exclusive-product_margin-padding">
                        <h3 class="exclusive-product__title">Exclusive</h3>
                        <p class="exclusive-product__subtitle exclusive-product__subtitle_margin-top">Fishnet Chair</p>
                        <p class="exclusive-product__paragraph exclusive-product__paragraph_margin-top">Seat and back
                            with
                            upholstery made of
                            cold cure foam. Steel frame, available in matt</p>
                        <a href="#" class="order-button exclusive-product__button_margin-top">
                            <p class="order-button__text">Order us</p>
                        </a>
                    </div>
                </div>
                <ul class="products products__right-list">
                    <li class="right-list__item">
                        <a href="#"><img src="img/exclusive-products/product_right_lightX.jpg" alt="lightX"></a>
                    </li>
                    <li class="right-list__item">
                        <a href="#"><img src="img/exclusive-products/product_right_sofa.jpg" alt="sofa"></a>
                    </li>
                    <li class="right-list__item">
                        <a href="#"><img src="img/exclusive-products/product_right_clock.jpg" alt="clock"></a>
                    </li>
                    <li class="right-list__item">
                        <a href="#"><img src="img/exclusive-products/product_right_light_top.jpg" alt="light_top"></a>
                    </li>
                </ul>
            </div>
            <div class="mobile-app mobile-app__margin">
                <div class="mobile-app__paragraph mobile-app__paragraph_margin-pad">
                    <h2 class="paragraph__title">mobile app</h2>
                    <p class="paragraph__subtitle paragraph__subtitle_margin-top">Find. Follow. Favorite.</p>
                    <p class="paragraph__descrip paragraph__descrip_margin-top">Save your favorites and share your
                        style.</p>
                    <div class="paragraph__links paragraph__links_margin-top">
                        <a href="#" class="link__item">
                            <img src="img/mobile-app/app_store.jpg" alt="app-store">
                        </a>
                        <a href="#" class="link__item">
                            <img src="img/mobile-app/google_play.jpg" alt="google-play">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <!-- @import 'blocks/template-blocks/footer/footer.kit' -->
        </div>
    </div>
</body>

</html>